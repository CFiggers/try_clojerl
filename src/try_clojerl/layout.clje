(ns try-clojerl.layout
  (:require [hiccup.page :refer [html5 include-css include-js]]))

(defn head [title]
  [:head
   [:title title]
   (include-css "css/main.css")
   (include-css "css/jquery.terminal-1.8.0.min.css")
   (include-js "js/jquery-1.7.1.min.js")
   (include-js "js/jquery.terminal-1.8.0.min.js")
   (include-js "js/main.js")])

(def header [:div#header])

(defn index [title content]
  (html5
   (head title)
   [:body header content]))
